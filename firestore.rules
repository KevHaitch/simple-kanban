rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /userDisplayNames/{email} {
      allow read: if true; // Allow anyone to read display names
      allow write: if request.auth != null && (request.auth.token.email == email); // Only allow users to write their own display name
    }
    
    // Allow authenticated users to read and write their own data
    match /boards/{boardId} {
      // Allow authenticated users to create new boards where they are the owner
      allow create: if request.auth != null && request.auth.uid == request.resource.data.owner;
      
      // Allow if user is the owner (for existing boards)
      allow read, write: if request.auth != null && request.auth.uid == resource.data.owner;
      
      // Allow read access if user's email (lowercase) is in the collaborators array (stored in lowercase)
      allow read: if request.auth != null && request.auth.token.email.lower() in resource.data.collaborators;
      
      // Tasks within a board
      match /tasks/{taskId} {
        // Allow if user is the owner of the parent board
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/boards/$(boardId)).data.owner == request.auth.uid;
        
        // Allow collaborators full read/write access to tasks (lowercase email matching)
        // This allows them to edit title, description, status, assignees, etc.
        allow read, write: if request.auth != null && 
                          request.auth.token.email.lower() in get(/databases/$(database)/documents/boards/$(boardId)).data.collaborators;
      }
    }
  }
} 